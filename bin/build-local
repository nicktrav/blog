#!/usr/bin/env bash

set -exuo pipefail

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
SHA=$(git rev-parse HEAD)

# Build dockerfiles and publsh locally
cd "$DIR/../content"
docker build -t "nickt/site-content:$SHA" .
docker tag "nickt/site-content:$SHA" "nickt/site-content"

cd "$DIR/../nginx"
docker build -t "nickt/site-nginx:$SHA" .
docker tag "nickt/site-nginx:$SHA" "nickt/site-nginx"
